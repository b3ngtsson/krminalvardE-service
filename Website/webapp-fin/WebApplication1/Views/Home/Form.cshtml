@model WebApplication1.Models.FormClass
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
    <link href="~/Form.css" rel="stylesheet" />

</head>

    <h1 class="title-form"> Ansökan </h1>
<div class="formDiv">
    @using (Html.BeginForm("Form", "Home", FormMethod.Post, new { @class = "Form" }))
    {
    <div class="formDiv-container">
        <label class="form-label">Email </label>
        <div>@Html.EditorFor(m => Model.EMail)</div>
    </div>
    <div class="formDiv-container">
        <label class="form-label">Besökares förnamn</label>
        <div>@Html.EditorFor(m => Model.VisitorFName)</div>
    </div>
    <div class="formDiv-container">
        <label class="form-label">Besökares efternamn</label>
        <div>@Html.EditorFor(m => Model.VisitorLName)</div>
    </div>
    <div class="formDiv-container">
        <label class="form-label">Telefonnummer</label>
        <div>@Html.EditorFor(m => Model.PhoneNumber)</div>
    </div>
    <div class="formDiv-container">
        <label class="form-label">Intagens personnummer</label>
        <div>@Html.EditorFor(m => Model.InmateSSN)</div> 
    </div>
    <div class="formDiv-container">
        <label class="form-label">Intagens förnamn</label>
        <div>@Html.EditorFor(m => m.PersonOfInterestFName)</div> 
    </div>
    <div class="formDiv-container">
        <label class="form-label">Intagens efternamn</label>
        <div>@Html.EditorFor(m => Model.PersonOfInterestLName)</div> 
    </div>
    <div class="formDiv-container">
    <input type="submit" value="Ansök" class="button" />
    </div>
        
    }
    <div>
        <h3>@Html.DisplayFor(m => Model.Status)</h3>
    </div>

</div>
